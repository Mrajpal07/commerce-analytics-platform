# Application
APP_ENV=development
LOG_LEVEL=INFO
APP_NAME=commerce-analytics-platform

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/commerce_analytics
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_ALWAYS_EAGER=False

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-min-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
FERNET_ENCRYPTION_KEY=your-fernet-key-base64-32-bytes

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Shopify (will be per-tenant, but defaults for testing)
SHOPIFY_API_VERSION=2024-01

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090